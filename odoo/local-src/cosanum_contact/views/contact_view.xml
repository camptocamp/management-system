<?xml version="1.0"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="vat" position="before">
                <field name="spitex_center_id" attrs="{'invisible': [('is_company','=', True)]}" />
                <field name="insurance_id" attrs="{'invisible': [('is_company','=', True)]}" />
            </field>
             <xpath expr="//field[@name='type']" position="before">
                 <field name="company_name_suffix1" string="First suffix" attrs="{'invisible': [('is_company', '!=', True)]}"/>
                 <field name="company_name_suffix2" string="Second suffix" attrs="{'invisible': [('is_company', '!=', True)]}"/>
             </xpath>
            <field name="barcode" position="after">
                <field name="marketing_type_ids" options="{'color_field': 'color', 'no_create_edit': True}" widget="many2many_tags"/>
                <field name="customer_value_id" options="{'no_create_edit': True,}"/>
                <field name="customer_fte_number" />
            </field>
            <xpath expr="//field[@name='child_ids']/form//field[@name='comment']" position="after">
                <field name="lang"/>
                <field name="category_id" options="{'color_field': 'color', 'no_create_edit': True}" widget="many2many_tags"/>
                <field name="marketing_type_ids" options="{'color_field': 'color', 'no_create_edit': True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.specific</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
        <xpath expr="//field[@name='email']" position="after">
            <field name="company_name_suffix1"/>
            <field name="company_name_suffix2"/>
            <field name="customer_value_id" options="{'no_create_edit': True,}"/>
            <field name="marketing_type_ids" options="{'color_field': 'color', 'no_create_edit': True,}" widget="many2many_tags"/>
            <field name="customer_fte_number" />
        </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select.ref.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <field name="name" position="replace" />
            <field name="company_group_id" position="replace" >
                <field name="name" />
                <field name="company_name_suffix1" />
                <field name="company_group_id" />
            </field>
        </field>
    </record>

</odoo>

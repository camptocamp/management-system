<?xml version="1.0"?>
<odoo>
    <record id="marketing_type_form" model="ir.ui.view">
        <field name="name">marketing.type.form</field>
        <field name="model">marketing.type</field>
        <field name="arch" type="xml">
            <form string="Marketing Type">
                <sheet>
                    <label for="Name"  string="Marketing type"/>
                    <field name="name" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="marketing_type_tree" model="ir.ui.view">
        <field name="name">marketing.type.tree</field>
        <field name="model">marketing.type</field>
        <field name="arch" type="xml">
            <tree string="Marketing Type" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="marketing_type_action" model="ir.actions.act_window">
        <field name="name">Marketing Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">marketing.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new kind of marketing type
          </p>
        </field>
    </record>

</odoo>

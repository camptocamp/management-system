<?xml version="1.0"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">crm.lead.form.partner.suffix</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                 <field name="company_name_suffix1" string="First suffix" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                 <field name="company_name_suffix2"  string="Second suffix" attrs="{'invisible': [('partner_id', '=', False)]}"/>
            </field>
        </field>
    </record>

    <menuitem name="Customer Values" action="cosanum_contact.customer_value_action" id="menu_customer_value" parent="crm.crm_menu_config" sequence="99"/>
    <menuitem name="Marketing Types" action="cosanum_contact.marketing_type_action" id="menu_marketing_type" parent="crm.crm_menu_config" sequence="99"/>

</odoo>
